{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/CVS": true
  },
  "hide-files.files": [],
  // Use Prettier as the default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Format automatically on save and paste
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,

  // ESLint auto-fix integration
  "eslint.validate": ["typescript", "html"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Match your Prettier config
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.printWidth": 120,
  "prettier.semi": true,
  "prettier.bracketSameLine": true,
  "prettier.singleAttributePerLine": false,
  "prettier.htmlWhitespaceSensitivity": "ignore",

  // Optional: Make Angular templates format properly
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Silence noisy ESLint messages when formatting
  "eslint.alwaysShowStatus": true,
  "[scss]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  }
}
